page {
  background: #f7f3ed;
  color: #2e4d3d;
  font-family: "STSong";
}

.container {
  padding: 24rpx;
}

.card {
  background: #fffaf1;
  border: 2rpx solid #e3d8c9;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 20rpx 30rpx rgba(46, 77, 61, 0.08);
}

.button {
  margin-top: 20rpx;
  background: #2e4d3d;
  color: #fff;
  border-radius: 999rpx;
  padding: 18rpx 0;
  text-align: center;
}

.label {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.input {
  border: 2rpx solid #e3d8c9;
  border-radius: 16rpx;
  padding: 16rpx;
  background: #fff;
}

.muted {
  color: #6c6258;
  font-size: 24rpx;
}
.button.ghost {
  background: #ffffff;
  color: #2e4d3d;
  border: 2rpx solid #e3d8c9;
}
.admin-fab {
  position: fixed;
  top: 24rpx;
  right: 24rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #2e4d3d;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  box-shadow: 0 16rpx 24rpx rgba(46, 77, 61, 0.25);
  z-index: 999;
}
