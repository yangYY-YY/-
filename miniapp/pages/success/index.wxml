<view class="draw-page">
  <image class="draw-bg" src="../../assets/lottery-bg1.png" mode="aspectFill" />

  <view class="draw-content">
    <view class="wheel-wrap" style="{{wheelWrapStyle}}">
      <view class="wheel-ring"></view>
      <view class="wheel" style="{{wheelStyle}}">
        <view class="wheel-center"></view>
        <view class="wheel-label" wx:for="{{labelStyles}}" wx:key="index" style="{{item.style}}">{{item.text}}</view>
      </view>
      <view class="wheel-pointer-wrap" style="{{pointerStyle}}">
        <view class="wheel-pointer-rotator">
          <view class="wheel-pointer-line" style="{{pointerLineStyle}}"></view>
          <view class="pointer-head" style="{{pointerHeadStyle}}"></view>
          <view class="pointer-dot"></view>
        </view>
      </view>
      <view class="wheel-base"></view>
    </view>

    <view class="button draw-btn" style="{{drawBtnStyle}}" bindtap="draw" disabled="{{spinning}}">{{spinning ? "抽奖中..." : "立即抽奖"}}</view>
  </view>
</view>


