page {
  background-color: transparent !important;
  min-height: 100vh;
}

.draw-page {
  min-height: 100vh;
  background-color: transparent;
  color: #e9f9ff;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.draw-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.draw-content {
  position: absolute;
  inset: 0;
  z-index: 1;
}

.wheel-wrap {
  position: absolute;
}

.wheel-ring {
  display: none;
}

.wheel {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: none;
  position: relative;
  overflow: hidden;
  background: transparent;
  box-shadow: none;
}

.wheel-center {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: rgb(0, 15, 39);
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 18rpx rgba(0, 15, 39, 0.7);
}

.wheel-label {
  position: absolute;
  font-family: SimHei, sans-serif;
  font-size: 28rpx;
  color: rgb(0, 15, 34);
  max-width: 180rpx;
  text-align: center;
  line-height: 1.2;
  text-shadow: 0 2rpx 6rpx rgba(255, 255, 255, 0.45);
}

.wheel-pointer-wrap {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  transform-origin: 0 0;
  transition: transform 9.6s cubic-bezier(0.12, 0.6, 0.1, 1);
}

.wheel-pointer-rotator {
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 0;
}

.wheel-pointer-line {
  position: absolute;
  left: -3rpx;
  top: -220rpx;
  width: 6rpx;
  height: 220rpx;
  background: rgb(0, 15, 39);
  border-radius: 6rpx;
  box-shadow: 0 0 12rpx rgba(0, 15, 39, 0.7);
}

.pointer-head {
  position: absolute;
  left: -10rpx;
  top: -246rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: rgb(0, 15, 39);
  box-shadow: 0 0 16rpx rgba(0, 15, 39, 0.7);
}

.pointer-dot {
  position: absolute;
  left: 0;
  top: -7rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: rgb(0, 15, 39);
  transform: translateX(-50%);
  box-shadow: 0 0 12rpx rgba(0, 15, 39, 0.7);
}

.wheel-base {
  display: none;
}

.draw-btn {
  position: absolute;
  left: 50%;
  right: auto;
  width: calc((100% - 48rpx) / 2);
  transform: translate(-50%, 72rpx);
  margin: 0;
  background: linear-gradient(90deg, #52f0d0, #5cb7ff);
  color: #062a3a;
  font-weight: 800;
  border-radius: 999rpx;
  padding: 16rpx 22rpx;
  box-shadow: 0 12rpx 28rpx rgba(88, 215, 255, 0.35);
}

.muted {
  display: none;
}


