<view class="container">
  <view class="card">
    <view class="label">我的签到</view>
    <input class="input" placeholder="手机号" maxlength="11" type="number" value="{{phone}}" bindinput="onInput" />
    <view class="button" bindtap="load">查看</view>
  </view>

  <view class="card" wx:for="{{records}}" wx:key="id">
    <view class="label">{{item.exhibition_name}}</view>
    <view class="muted">公司：{{item.company_name}}</view>
    <view class="muted">签到人：{{item.signer_name}}</view>
    <view class="muted">手机号：{{item.phone}}</view>
    <view class="muted">地点：{{item.location}}</view>
    <view class="muted">时间：{{item.checkin_time}}</view>
  </view>
</view>
