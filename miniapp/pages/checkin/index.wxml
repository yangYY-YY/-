<view class="container checkin-page">
  <image class="checkin-bg" src="../../assets/draw-bg.jpg" mode="aspectFill" />
  <view class="checkin-overlay"></view>

  <view class="checkin-card">
    <image class="checkin-title" src="../../assets/title.png" mode="widthFix" />
    <view class="label">公司名称</view>
    <input class="input" placeholder="XXX公司" value="{{form.companyName}}" bindinput="onInput" data-field="companyName" />

    <view class="label">签到人</view>
    <input class="input" placeholder="XXX" value="{{form.signerName}}" bindinput="onInput" data-field="signerName" />

    <view class="label">签到人手机号</view>
    <input class="input" placeholder="11位手机号" maxlength="11" type="number" value="{{form.phone}}" bindinput="onInput" data-field="phone" />

    <view class="button" bindtap="submit">提交打卡</view>
    <view class="muted">当前展会：{{activeExhibition.name}}</view>
    <view class="muted" wx:if="{{lastDrawResult}}">抽奖结果：{{lastDrawResult}}</view>
  </view>

  <view class="admin-fab" bindtap="openAdmin">后台</view>
</view>
