
.container {
  min-height: 100vh;
  padding: 0;
}

.checkin-page {
  position: relative;
  overflow: hidden;
}

.checkin-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.checkin-overlay {
  position: absolute;
  inset: 0;
  background: rgba(6, 18, 28, 0.55);
  z-index: 1;
}

.checkin-card {
  position: relative;
  z-index: 2;
  width: 88%;
  margin: 220rpx auto 0;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 20rpx;
  padding: 22rpx 22rpx 28rpx;
  border: 1rpx solid rgba(45, 108, 223, 0.15);
  box-shadow: 0 28rpx 70rpx rgba(8, 20, 40, 0.32);
  backdrop-filter: blur(8rpx);
}

.checkin-title {
  width: 120rpx;
  max-width: 55%;
  margin: 6rpx 0 12rpx 6rpx;
  display: block;
}

.label {
  margin-top: 12rpx;
  color: #2d6cdf;
  font-weight: 600;
}

.input {
  margin-top: 6rpx;
  padding: 12rpx 14rpx;
  border: 1rpx solid rgba(45, 108, 223, 0.18);
  border-radius: 10rpx;
  background: #f6f8fc;
}

.button {
  margin-top: 18rpx;
  background: #2d6cdf;
  color: #fff;
  border-radius: 999rpx;
  padding: 12rpx 20rpx;
}

.muted {
  margin-top: 6rpx;
  color: rgba(45, 108, 223, 0.75);
}

.admin-fab {
  position: fixed;
  right: 28rpx;
  top: 190rpx;
  z-index: 3;
  background: #2d6cdf;
  color: #fff;
}
