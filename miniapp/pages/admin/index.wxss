page {
  background-color: transparent !important;
  min-height: 100vh;
}

.draw-page {
  min-height: 100vh;
  background-color: transparent;
  color: #e9f9ff;
  text-align: center;
  padding: 56rpx 24rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.draw-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.draw-content {
  position: relative;
  z-index: 1;
}

.draw-title {
  font-size: 60rpx;
  font-weight: 900;
  letter-spacing: 6rpx;
  color: #e8fbff;
  text-shadow: 0 0 20rpx rgba(120, 255, 255, 0.7), 0 10rpx 28rpx rgba(0, 200, 255, 0.55);
  margin-top: 18rpx;
  margin-bottom: 8rpx;
}

.draw-subtitle {
  margin-top: 6rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: rgba(223, 247, 255, 0.75);
}

.wheel-wrap {
  width: 520rpx;
  height: 520rpx;
  margin: 580rpx auto 100rpx;
  position: relative;
}

.wheel-ring {
  display: none;
}

.wheel {
  width: 460rpx;
  height: 460rpx;
  border-radius: 50%;
  border: none;
  position: relative;
  overflow: hidden;
  background: transparent;
  box-shadow: none;
}

.wheel-center {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #6fe8ff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 18rpx rgba(111, 232, 255, 0.9);
}

.wheel-label {
  position: absolute;
  font-size: 22rpx;
  color: #0a2b40;
  max-width: 180rpx;
  text-align: center;
  line-height: 1.2;
  text-shadow: 0 2rpx 6rpx rgba(255, 255, 255, 0.45);
}

.wheel-pointer-wrap {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  transform-origin: 0 0;
  transition: transform 9.6s cubic-bezier(0.12, 0.6, 0.1, 1);
}

.wheel-pointer-rotator {
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 0;
}

.wheel-pointer-line {
  position: absolute;
  left: -3rpx;
  top: -190rpx;
  width: 6rpx;
  height: 190rpx;
  background: rgba(160, 235, 255, 0.95);
  border-radius: 6rpx;
  box-shadow: 0 0 12rpx rgba(120, 220, 255, 0.9);
}

.pointer-head {
  position: absolute;
  left: -10rpx;
  top: -214rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #9feaff;
  box-shadow: 0 0 16rpx rgba(120, 220, 255, 0.9);
}

.pointer-dot {
  position: absolute;
  left: 0;
  top: -7rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #7adfff;
  transform: translateX(-50%);
  box-shadow: 0 0 12rpx rgba(122, 223, 255, 0.8);
}

.wheel-base {
  display: none;
}

.draw-btn {
  margin: 0 auto;
  background: linear-gradient(90deg, #52f0d0, #5cb7ff);
  color: #062a3a;
  font-weight: 800;
  border-radius: 999rpx;
  padding: 16rpx 22rpx;
  box-shadow: 0 12rpx 28rpx rgba(88, 215, 255, 0.35);
}

.muted {
  margin-top: 14rpx;
  color: rgba(223, 247, 255, 0.75);
  font-size: 24rpx;
}

